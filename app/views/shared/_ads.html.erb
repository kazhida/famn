<% if Rails.env.production? %>
    <% if google_ad? %>
        <div class="ad_gadget_<%= google_ad_width %>">
            <script type="text/javascript"><!--
            google_ad_client = "<%= google_ad_client %>";
            google_ad_slot   = "<%= google_ad_slot %>";
            google_ad_width  = <%= google_ad_width %>;
            google_ad_height = <%= google_ad_height %>;
            //-->
            </script>
            <script type="text/javascript" src="<%= google_ad_script %>">
            </script>
        </div>
    <% end %>
    <% if value_commerce_gadget? %>
        <div class="ad_gadget">
          <script src="http://ad.jp.ap.valuecommerce.com/servlet/jsgadget?<%= value_commerce_gadget %>">
          </script>
        </div>
    <% else %>
        <% (0..5).each do |i| %>
            <% if value_commerce_fragment?(i) %>
                <div class="ad_gadget_234">
                  <iframe frameborder="0"
                          allowtransparency="true"
                          height="60"
                          width="234"
                          scrolling="no"
                          src="http://ad.jp.ap.valuecommerce.com/servlet/htmlbanner?<%= value_commerce_fragment(i) %>"
                          marginheight="0"
                          marginwidth="0">
                    <script language="javascript"
                            src="http://ad.jp.ap.valuecommerce.com/servlet/jsbanner?<%= value_commerce_fragment(i) %>">
                    </script>
                    <noscript>
                      <a href="http://ck.jp.ap.valuecommerce.com/servlet/referral?<%= value_commerce_fragment(i) %>"
                         target="_blank" >
                        <img src="http://ad.jp.ap.valuecommerce.com/servlet/gifbanner?<%= value_commerce_fragment(i) %>"
                             height="60"
                             width="234"
                             border="0">
                      </a>
                    </noscript>
                  </iframe>
                </div>
            <% end %>
        <% end %>
    <% end %>
<% else %>
    <div class="ad_fake">
      <h3>広告エリア</h3>
    </div>
<% end %>
