div data-role="page" data-theme="b"
  = render 'entries/header'
  div data-role="content"
    = form_tag :entries do
      = label_tag     :message, 'メッセージ'
      = text_area_tag :message, '', :maxlength => 250
      fieldset data-role="controlgroup" data-type="horizontal"
        - (1..4).each do |look|
          span class="icon"
            = radio_button_tag :face, look, look == 1, 'data-theme' => 'c'
            = label_tag "face_#{look}" do
              = image_tag current_user.icon(look), :size => '24x24'
          | &nbsp;&nbsp;
      = submit_tag '送信', 'data-theme' => 'a'
  = render 'shared/footer'
